<div class="t_news_hotest">
	<?php if ($this->articles) : ?>
	<div class="image">
		<?php if ($this->articles[0]->image_small != null) : ?>
		<a href="<?php echo $this->url($this->articles[0]->getProperties(), 'news_article_details'); ?>">
			<img src="<?php echo $this->articles[0]->image_small; ?>" />
		</a>
		<?php endif; ?>
	</div>
		
	<h2><a href="<?php echo $this->url($this->articles[0]->getProperties(), 'news_article_details'); ?>"><?php echo $this->articles[0]->title; ?></a></h2>
	<cite><?php echo $this->dateFormatter()->diff(strtotime($this->articles[0]->created_date), $this->dateFormat); ?></cite>
	<div><?php echo $this->articles[0]->description; ?></div>
	
	<ul>
		<?php for ($i = 1; $i < count($this->articles); $i++) : ?>
		<li><h3><a href="<?php echo $this->url($this->articles[$i]->getProperties(), 'news_article_details'); ?>"><?php echo $this->articles[$i]->title; ?></a></h3></li>
		<?php endfor; ?>
	</ul>
	<?php endif; ?>
</div>
