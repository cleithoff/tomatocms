<?php 
$this->headTitle(sprintf($this->translator('tag_list_by_tag'), $this->tag->tag_text));
?>

<div class="t_multimedia_set_details">
	<h2><?php echo sprintf($this->translator('tag_list_by_tag'), $this->tag->tag_text); ?></h2>
	
	<?php if ($this->files) : ?>
	<?php foreach ($this->files as $index => $file) : ?>
		<?php if ($index % 3 == 0) : ?><ul class="clearfix"><?php endif; ?>
		
		<li>
			<a href="<?php echo $this->url($file->getProperties(), 'multimedia_file_details'); ?>">
				<img src="<?php echo $file->image_small; ?>" />
			</a>
			<h3><?php echo $file->title; ?></h3>
			<cite><?php echo $file->created_date; ?></cite>
			<div><?php echo $file->description; ?></div>
		</li>
		
		<?php if ($index % 3 == 2 || $index == count($this->files) - 1) : ?></ul><?php endif; ?>
	<?php endforeach; ?>
	<?php endif; ?>
	
	<div class="paginator">
		<?php echo $this->paginator()->slide($this->paginator, $this->paginatorOptions); ?>
	</div>
</div>
