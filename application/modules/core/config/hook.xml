<!DOCTYPE hooks SYSTEM "http://schemas.tomatocms.com/dtd/hook_about.dtd">
<hooks>
	<module>core</module>
	<targets>
		<!-- since 2.0.3 -->
		<target name="Core_PageLoaded" type="action">
			<description>Calls when the page loaded</description>
			<params></params>
		</target>
		
		<!-- since 2.0.7 -->
		<target name="Core_LinkProvider" type="filter">
			<description>Link Provider. Show the useful link provided by other modules and use in somewhere else</description>
			<params></params>
		</target>
	</targets>
</hooks>
