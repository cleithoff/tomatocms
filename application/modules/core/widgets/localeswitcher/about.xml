<!DOCTYPE widget SYSTEM "http://schemas.tomatocms.com/dtd/widget_about.dtd">
<widget>
	<name>LocaleSwitcher</name>
	<title>Switch locale</title>
	<module>core</module>
	<description>Show links for switching to other locale</description>
	<thumbnail></thumbnail>
	<author>TomatoCMS Core Team</author>
	<email>core@tomatocms.com</email>
	<version>2.0.8</version>
	<license>free</license>
	<params>
		<param name="type">
			<description><![CDATA[
			Can take one of three values:
			- full: Show both flags and languages
			- language: Show languages only
			- flag: Show flags only 
			]]></description>
		</param>
	</params>
	<resources></resources>
</widget>
