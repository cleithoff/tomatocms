			<?php echo $details['localName']; ?>
		<?php else : ?>
			<img src="<?php echo $this->APP_STATIC_SERVER; ?>/images/flags/<?php echo $locale; ?>.png" />
		<?php endif; ?>
		</a>
	</span>
	<?php endforeach; ?>
