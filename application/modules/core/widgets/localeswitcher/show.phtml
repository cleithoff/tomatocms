<div class="t_core_localeswitcher">
	<?php foreach ($this->links as $locale => $details) : ?>
	<span>
		<a href="<?php echo $details['href']; ?>">
		<?php if ('full' == $this->type) : ?>
			<img src="<?php echo $this->APP_STATIC_SERVER; ?>/images/flags/<?php echo $locale; ?>.png" /> <?php echo $details['localName']; ?>
