<!DOCTYPE permissions SYSTEM "http://schemas.tomatocms.com/dtd/module_permission.dtd">
<permissions>
	<resource name="config" description="Config mail server" langKey="permission_config">
		<privilege name="server" description="Config mail server" langKey="permission_config_server" />
	</resource>
	<resource name="template" description="Manage mail templates" langKey="permission_template">
		<privilege name="add" description="Add new mail template" langKey="permission_template_add" />
		<privilege name="delete" description="Delete the mail template" langKey="permission_template_delete" />
		<privilege name="edit" description="Edit the mail template" langKey="permission_template_edit" />
		<privilege name="list" description="View the list of templates" langKey="permission_template_list" />
	</resource>
	<resource name="mail" description="Manage mails" langKey="permission_mail">
		<privilege name="list" description="View the list of mails" langKey="permission_mail_list" />
		<privilege name="send" description="Send mails" langKey="permission_mail_send" />
	</resource>
</permissions>
