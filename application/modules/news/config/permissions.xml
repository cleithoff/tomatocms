<!DOCTYPE permissions SYSTEM "http://schemas.tomatocms.com/dtd/module_permission.dtd">
<permissions>
	<resource name="article" description="Manage articles" langKey="permission_article">
		<privilege name="activate" description="Activate article" langKey="permission_article_activate" />
		<privilege name="add" description="Add new article" langKey="permission_article_add" />
		<privilege name="delete" description="Delete article" langKey="permission_article_delete" />
		<privilege name="edit" description="Edit article" langKey="permission_article_edit" />
		
		<!-- since 2.0.7 -->
		<privilege name="emptytrash" description="Empty the trash" langKey="permission_article_empty_trash" />
		
		<privilege name="hot" description="Manage hot articles" langKey="permission_article_hot" />
		<privilege name="list" description="View the list of articles" langKey="permission_article_list" />
		<privilege name="preview" description="Preview article" langKey="permission_article_preview" />
	</resource>
	
	<!-- since 2.0.4 -->
	<resource name="revision" description="Manage revisions" langKey="permission_revision">
		<privilege name="add" description="Add new revision" langKey="permission_revision_add" />
		<privilege name="delete" description="Delete revision" langKey="permission_revision_delete" />
		<privilege name="list" description="View the list of article revisions" langKey="permission_revision_list" />
		<privilege name="restore" description="Restore revision" langKey="permission_revision_restore" />
	</resource>
</permissions>
