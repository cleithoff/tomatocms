<!DOCTYPE hooks SYSTEM "http://schemas.tomatocms.com/dtd/hook_about.dtd">
<hooks>
	<module>news</module>
	<targets>
		<target name="News_Article_Details_FormatContent" type="filter">
			<description>Format content of article</description>
			<params>
				<param name="content">
					<description>Format content of article</description>
				</param>
			</params>
		</target>
		
		<!-- since 2.0.2 -->
		<target name="News_Article_Add_ShowSidebar" type="action">
			<description>Show right side bar of adding article form</description>
			<params>
			</params>
		</target>
		
		<target name="News_Article_Add_Success" type="action">
			<description>Executes after adding new article</description>
			<params>
				<param name="articleId">
					<description>Id of article</description>
				</param>
			</params>
		</target>
	</targets>
</hooks>
