<widget>
	<name>Menu</name>
	<title>Menu</title>
	<module>menu</module>
	<description>Show menu</description>
	<thumbnail></thumbnail>
	<author>TomatoCMS Core Team</author>
	<email>core@tomatocms.com</email>
	<version>2.0.2</version>
	<license>free</license>
	<params>
		<param name="menu_id">
			<description>Id of menu</description>
