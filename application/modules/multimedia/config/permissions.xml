<!DOCTYPE permissions SYSTEM "http://schemas.tomatocms.com/dtd/module_permission.dtd">
<permissions>
	<resource name="file" description="Manage file" langKey="permission_file">
		<privilege name="activate" description="Activate a file" langKey="permission_file_activate" />
		<privilege name="add" description="Create new file" langKey="permission_file_add" />
		<privilege name="delete" description="Delete a file" langKey="permission_file_delete" />
		<privilege name="edit" description="Edit given file" langKey="permission_file_edit" />
		<privilege name="editor" description="Image Editor" langKey="permission_file_editor" />
	</resource>
	
	<!-- since 2.0.4 -->
	<resource name="note" description="Manage notes" langKey="permission_note">
		<privilege name="activate" description="Activate a note" langKey="permission_note_activate" />
		<privilege name="delete" description="Delete a note" langKey="permission_note_delete" />
		<privilege name="edit" description="Edit given note" langKey="permission_note_edit" />		
		<privilege name="list" description="View list of notes" langKey="permission_note_list" />
	</resource>
	
	<resource name="photo" description="Manage photos" langKey="permission_photo">
		<privilege name="upload" description="Upload photo" langKey="permission_photo_upload" />
	</resource>
	<resource name="set" description="Manage set" langKey="permission_set">
		<privilege name="activate" description="Activate a set" langKey="permission_set_activate" />
		<privilege name="add" description="Create new set" langKey="permission_set_add" />
		<privilege name="delete" description="Delete a set" langKey="permission_set_delete" />
		<privilege name="edit" description="Edit given set" langKey="permission_set_edit" />
	</resource>
</permissions>
